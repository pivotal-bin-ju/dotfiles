#!/bin/bash

set -e -u -x

GIT_DUET_RELEASE='https://github.com/git-duet/git-duet/releases/download/0.6.0/linux_amd64.tar.gz'

sudo apt install stow
sudo stow -t / rootfs

sudo apt update

mkdir -p ~/bin

stow -t ~ fish
sudo apt -t testing install fish fonts-powerline
sudo chsh -s /usr/bin/fish $(whoami)

stow -t ~ git
sudo apt install curl
curl -L "$GIT_DUET_RELEASE" | tar -C ~/bin -zxf -

stow -t ~ nvim
sudo apt install neovim/testing python3-pip
sudo pip3 install pynvim
for alt in vi vim editor; do
  sudo update-alternatives --install /usr/bin/$alt $alt /usr/bin/nvim 60
  sudo update-alternatives --set $alt /usr/bin/nvim
done

sudo apt install golang-1.12
vim --headless +GoInstallBinaries +qa

sudo apt -t unstable install lastpass-cli
